
<table border="1">
<% @list_of_movies.each do |a_thing| %>
  <tr>
  <%
   name=Director.where({:id =>a_thing.director_id }).at(0).name
  %>
    <td><%= a_thing.title %></td>
        <td><img src="http://robohash.org/<%= a_thing.image %>"></td>

    <td><%= name %></td>
    <td>
      <a href="/movies/<%= a_thing.id%>">
        Show details
      </a>
    </td>
  </tr>
<% end %>
    
</table>
